          </div>
          <div class="card-body">
            <form
              action="/admin/addproduct"
              method="POST"
              enctype="multipart/form-data"
              id="addProductValidation"
            >
              <div class="modal-body">
                <div class="input-group mb-3">
              
                  <input
                    name="productName" 
                    type="name"
                    class="form-control"
                    placeholder="Product Name"
                    required
                  />
                </div>

                <div class="input-group mb-3">
                  <label class="container">
                    <span>Select Parent Category</span>
                    <select
                      name="parentCategory"
                      class="form-select"
                      aria-label="Default select example"
                    >
                      <% categories.forEach((value)=>{ %>
                      <option value="<%=value._id%>">
                        <%= value.categoryName %>
                      </option>
                      <% }) %>
                    </select>
                  </label>
                </div>

                <div class="mb-3">
                    <div id="imageDiv" class="d-flex flex-wrap gap-5"></div>
                    <div>
                      <label for="image" class="form-label">Image</label>
                      <input
                        type="file"
                        class="form-control"
                        id="image"
                        name="images"
                        accept="image/*"
                        multiple
                        onchange="loadFile(event)"
                        required
                      />
                    </div>
                    <!-- Close button -->
                    <!-- <button type="button" style="width: fit-content; display: none;" id="cls-btn" class="btn btn-danger mt-2" onclick="clearImageInput()">Clear images</button> -->
                  </div>
                 
                  

                <div class="input-group mb-3">
                  <input
                    name="productPrice"
                    type="number"
                    class="form-control"
                    placeholder="Product Price"
                    min="100"
                    max="10000"
                    required
                  />
                </div>
                <div class="input-group mb-3">
                  <input
                    name="productStock"
                    type="number"
                    class="form-control"
                    placeholder="Product Stock"
                    min="0"
                    required
                  />
                </div>
              </div>
              <div class="modal-footer">
                <button 
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                 >
                  Close
                </button>
                <button type="submit" id="cropButton" class="btn btn-info">Save changes</button>
              </div>
            </form>

