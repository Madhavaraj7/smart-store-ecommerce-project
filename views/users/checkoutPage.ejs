<script>
    const orderBtnElement = document.getElementById('orderBtn');
    const CODElement = document.getElementById('COD');
    const razorpayElement = document.getElementById('razorpay');
    const walletElement = document.getElementById('wallet');
    const grandTotalElement = document.getElementById('grandTotal');

    // Function to disable or hide COD button if grand total is greater than 1000
function checkGrandTotal() {
    const grandTotal = parseFloat(grandTotalElement.innerText.replace('₹', ''));
    if (grandTotal > 1000) {
        // Disable COD option
        CODElement.disabled = true;
        // Hide COD option
        CODElement.closest('.card-paynemt-box').style.display = 'none';
    } else {
        CODElement.disabled = false;
        CODElement.closest('.card-paynemt-box').style.display = 'block';
    }
}


    // Call the function initially when the DOM content is loaded
    document.addEventListener('DOMContentLoaded', function () {
        checkGrandTotal();
    });

    // Call the function whenever grand total changes
    // Assuming grand total changes dynamically, replace 'yourEvent' with appropriate event
    grandTotalElement.addEventListener('yourEvent', checkGrandTotal);

    // Function to handle order button click
    orderBtnElement.addEventListener('click', orderBtnClickFunction);

    async function orderBtnClickFunction(event) {
        try {
            event.preventDefault();
            

            if (CODElement.checked) { // Cash on delivery
                window.location.href = '/checkout/orderPlacedEnd';
            } else if (walletElement.checked) {
                let response = await fetch("/checkout/orderPlaced", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({ walletPayment: true }),
                });
                response = await response.json();
                if (response.insufficientWalletBalance) {
                    return Swal.fire({
                        icon: "error",
                        title: "Insufficient Balance",
                        text: "No sufficient balance"
                    });
                } else if (response.success) {
                    window.location.href = '/checkout/orderPlacedEnd';
                }
            } else if (razorpayElement.checked) {
                const orderResponse = await fetch('/checkout/razorpay/create/orderId', { method: 'POST' });
                const order = await orderResponse.json();
                console.log(order);
                await openRazorpay(order.amount, order.id);
            }
            else{
                return Swal.fire({
                icon: "error",
                title: "Payment method not selected",
                text: "Please select a payment method",
            });
            }
        } catch (error) {
            console.error(error);
        }
    }

    // Function to open Razorpay
    async function openRazorpay(amount, creditId) {
        try {
            var options = {
                key: "rzp_test_LSVsVjKJgjMK1G",
                amount: "" + amount,
                currency: "INR",
                name: "SMART STORE",
                description: "Test Transaction",
                callback_url: "/checkout/orderPlaced",
                image: "/images/logo-dark.png",
                credit_id: creditId,
                theme: {
                    color: "#3399cc",
                },
            };
            var razorpay = new Razorpay(options);
            razorpay.open();
        } catch (error) {
            console.error(error);
        }
    }
</script>



