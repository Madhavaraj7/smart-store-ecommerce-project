<style>
  .coupon-container {
    width: 100%;
    overflow-x: scroll; /* Enable horizontal scrolling */
    white-space: nowrap;
    padding: 20px 0; /* Add padding for spacing */
    margin-bottom: 20px;
    position: relative; /* Positioning context for scroll buttons */
  }

  .coupon-container::-webkit-scrollbar {
    height: 8px; /* Set scrollbar height */
  }

  .coupon-container::-webkit-scrollbar-track {
    background: #f1f1f1; /* Set scrollbar track color */
    border-radius: 10px; /* Set scrollbar track border radius */
  }

  .coupon-container::-webkit-scrollbar-thumb {
    background: #888; /* Set scrollbar thumb color */
    border-radius: 10px; /* Set scrollbar thumb border radius */
  }

  .coupon-card {
    display: inline-block; /* Display coupon cards in a row */
    width: 200px;
    margin-right: 20px; /* Add margin between cards */
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    transition: box-shadow 0.3s;
    cursor: pointer; /* Change cursor to pointer on hover */
    background-color: #5cb85c; /* Set background color */
  }

  .coupon-card:hover {
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
  }

  .coupon-card h3 {
    margin-top: 0;
    margin-bottom: 10px;
    font-size: 18px;
    color: #fffbfb;
  }

  .coupon-card p {
    margin: 0;
    font-size: 14px;
    color: #000000;
  }

  /* Scroll buttons */
  .scroll-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.8);
    border: 1px solid #ccc;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .scroll-button:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }

  .scroll-left {
    left: 0;
  }

  .scroll-right {
    right: 0;
  }
</style>


