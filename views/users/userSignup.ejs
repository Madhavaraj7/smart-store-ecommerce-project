<!--validation-->
<script>


    $("#formData").validate({
      rules: {
        name: {
          required: true,
          minlength: 4,
          maxlength: 12,
        },
        email: {
          required: true,
          email: true,
        },
        phonenumber: {
          required: true,
          minlength: 10,
          maxlength: 10,
        },
        password: {
          required: true,
          minlength: 6,
          maxlength: 8,
        },
      },
     
     
    });


</script>



<style>
  .error-message {
    color: red;
    display: none;
  }
</style>

